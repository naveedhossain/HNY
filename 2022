mitul.forward(40)
mitul.left(120)
mitul.forward(100)
mitul.penup()
mitul.home()

# set up for Y

mitul.backward(30)
mitul.right(90)
mitul.forward(65)
mitul.left(90)

# set up for Y


mitul.pendown()
mitul.left(90)
mitul.forward(50)
mitul.left(30)
mitul.forward(60)
mitul.backward(60)
mitul.right(60)
mitul.forward(60)
mitul.backward(60)
mitul.left(30)

# go to Home 

mitul.penup()
mitul.home()

# printing E

mitul.forward(10)
mitul.right(90)
